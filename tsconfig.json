{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "esNext",
    "strict": true,
    "declaration": true,
    "jsx": "preserve",
    "outDir": "dist",
    "skipLibCheck": true,
    "importHelpers": true,
    "lib": ["ESNext", "DOM"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": false
  },
  "include": ["src/**/*"],
  "exclude": ["dev/**/*"]
}
