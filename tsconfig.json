{
  "compilerOptions": {
    "moduleResolution": "node",
    "module": "commonjs",
    "strict": true,
    "declaration": true,
    "jsx": "react",
    "outDir": "dist",
    "skipLibCheck": true,
    "importHelpers": true,
    "lib": ["es6", "dom", "dom.iterable"],
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*"],
  "exclude": ["dev/**/*"]
}
